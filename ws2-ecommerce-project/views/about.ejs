    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <p>¬© <span id="year"><%= new Date().getFullYear() %></span> <%= name %>. All rights reserved. Baked with ‚ù§Ô∏è</p>
        </div>
    </footer>
</body>
</html>