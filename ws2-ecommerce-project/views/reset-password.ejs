<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Sweet Haven Bakery</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background: linear-gradient(135deg, #fffbf0 0%, #fef3c7 50%, #fde68a 100%);
            position: relative;
            overflow: hidden;
        }

        .auth-container::before {
            content: 'üîê';
            position: absolute;
            font-size: 18rem;
            opacity: 0.05;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-15deg);
            pointer-events: none;
        }

        .auth-card {
            background: white;
            border-radius: 1.5rem;
            box-shadow: 0 10px 40px rgba(120, 53, 15, 0.15);
            padding: 3rem 2.5rem;
            width: 100%;
            max-width: 460px;
            border: 3px solid var(--border-light);
            position: relative;
            z-index: 1;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .auth-logo {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-color), #ea580c);
            border-radius: 1.25rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.25rem;
            box-shadow: 0 8px 20px rgba(217, 119, 6, 0.3);
        }

        .auth-logo i {
            font-size: 2.5rem;
            color: white;
        }

        .auth-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .auth-subtitle {
            color: var(--text-secondary);
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .message {
            margin-bottom: 1.25rem;
            padding: 1rem 1.25rem;
            border-radius: 0.75rem;
            display: flex;
            align-items: center;
            font-size: 0.9rem;
            font-weight: 500;
            border: 2px solid;
        }

        .message i {
            margin-right: 0.75rem;
            font-size: 1.1rem;
        }

        .message.success {
            background-color: #f0fdf4;
            border-color: #10b981;
            color: #065f46;
        }

        .message.error {
            background-color: #fef2f2;
            border-color: #ef4444;
            color: #991b1b;
        }

        .auth-form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-label {
            display: block;
            margin-bottom: 0.625rem;
            font-weight: 600;
            color: var(--text-primary);
            font-size: 0.925rem;
        }

        .form-label i {
            margin-right: 0.5rem;
            color: var(--primary-color);
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1.125rem;
            border: 2px solid var(--border-color);
            border-radius: 0.75rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background-color: var(--bg-primary);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(217, 119, 6, 0.1);
            background-color: white;
        }

        .password-match-indicator {
            margin-top: 0.75rem;
            padding: 0.75rem 1rem;
            border-radius: 0.75rem;
            font-size: 0.875rem;
            font-weight: 500;
            display: none;
            align-items: center;
            gap: 0.5rem;
        }

        .password-match-indicator.show {
            display: flex;
        }

        .password-match-indicator.match {
            background: #f0fdf4;
            color: #059669;
            border: 2px solid #bbf7d0;
        }

        .password-match-indicator.no-match {
            background: #fef2f2;
            color: #dc2626;
            border: 2px solid #fecaca;
        }

        .turnstile-container {
            margin: 0.5rem 0;
            display: flex;
            justify-content: center;
        }

        .btn {
            padding: 1rem 1.5rem;
            border: none;
            border-radius: 0.75rem;
            font-weight: 600;
            font-size: 1rem;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.625rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), #ea580c);
            color: white;
            box-shadow: 0 6px 20px rgba(217, 119, 6, 0.3);
            width: 100%;
        }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(217, 119, 6, 0.4);
        }

        .btn-primary:active:not(:disabled) {
            transform: translateY(0);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .auth-links {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid var(--border-light);
        }

        .auth-links p {
            margin-bottom: 0;
            color: var(--text-secondary);
            font-size: 0.925rem;
        }

        .auth-links a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
        }

        .auth-links a:hover {
            color: var(--primary-hover);
            text-decoration: underline;
        }

        .security-note {
            background: var(--bg-secondary);
            border: 2px solid var(--border-light);
            border-radius: 0.75rem;
            padding: 1rem;
            margin-top: 1rem;
            font-size: 0.875rem;
            color: var(--text-secondary);
            display: flex;
            align-items: start;
            gap: 0.75rem;
        }

        .security-note i {
            color: var(--primary-color);
            font-size: 1.1rem;
            margin-top: 0.125rem;
        }

        @media (max-width: 480px) {
            .auth-card {
                padding: 2rem 1.5rem;
            }

            .auth-title {
                font-size: 1.75rem;
            }

            .auth-logo {
                width: 70px;
                height: 70px;
            }

            .auth-logo i {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-logo">
                    <i class="fas fa-key"></i>
                </div>
                <h1 class="auth-title">Reset Password</h1>
                <p class="auth-subtitle">Enter your new password to secure your Sweet Haven account</p>
            </div>
            
            <% if (locals.message) { %>
                <div class="message error">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= message %>
                </div>
            <% } %>
            
            <form class="auth-form" action="/password/reset/<%= token %>" method="POST" id="resetForm">
                <div class="form-group">
                    <label for="password" class="form-label">
                        <i class="fas fa-lock"></i>
                        New Password
                    </label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter new password" required>
                </div>

                <div class="form-group">
                    <label for="confirm" class="form-label">
                        <i class="fas fa-lock"></i>
                        Confirm Password
                    </label>
                    <input type="password" id="confirm" name="confirm" class="form-control" placeholder="Confirm new password" required>
                    
                    <div class="password-match-indicator" id="matchIndicator">
                        <i class="fas fa-check-circle"></i>
                        <span id="matchText">Passwords match!</span>
                    </div>
                </div>

                <div class="security-note">
                    <i class="fas fa-shield-alt"></i>
                    <div>
                        <strong>Password Requirements:</strong>
                        <br>Minimum 8 characters with uppercase, lowercase, number, and special character.
                    </div>
                </div>

                <!-- Turnstile widget -->
                <div class="turnstile-container">
                    <div class="cf-turnstile" 
                         data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary" id="resetBtn">
                    <i class="fas fa-check-circle"></i>
                    Reset My Password
                </button>
            </form>

            <div class="auth-links">
                <p>
                    <a href="/users/login">
                        <i class="fas fa-arrow-left"></i>
                        Back to Login
                    </a>
                </p>
            </div>
        </div>
    </div>

    <!-- Turnstile script -->
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

    <script>
        const passwordInput = document.getElementById('password');
        const confirmInput = document.getElementById('confirm');
        const matchIndicator = document.getElementById('matchIndicator');
        const matchText = document.getElementById('matchText');
        const resetBtn = document.getElementById('resetBtn');
        const form = document.getElementById('resetForm');

        // Check if passwords match
        function checkPasswordMatch() {
            const password = passwordInput.value;
            const confirm = confirmInput.value;

            if (confirm.length === 0) {
                matchIndicator.classList.remove('show');
                return;
            }

            matchIndicator.classList.add('show');

            if (password === confirm) {
                matchIndicator.classList.remove('no-match');
                matchIndicator.classList.add('match');
                matchIndicator.querySelector('i').className = 'fas fa-check-circle';
                matchText.textContent = 'Passwords match!';
            } else {
                matchIndicator.classList.remove('match');
                matchIndicator.classList.add('no-match');
                matchIndicator.querySelector('i').className = 'fas fa-times-circle';
                matchText.textContent = 'Passwords do not match';
            }
        }

        // Event listeners for password matching
        passwordInput.addEventListener('input', checkPasswordMatch);
        confirmInput.addEventListener('input', checkPasswordMatch);

        // Form validation
        form.addEventListener('submit', function(e) {
            const password = passwordInput.value;
            const confirm = confirmInput.value;
            
            if (!password || !confirm) {
                e.preventDefault();
                alert('Please fill in all fields.');
                return;
            }
            
            if (password !== confirm) {
                e.preventDefault();
                alert('Passwords do not match.');
                return;
            }
            
            if (password.length < 8) {
                e.preventDefault();
                alert('Password must be at least 8 characters long.');
                return;
            }
            
            // Check password requirements
            const hasUppercase = /[A-Z]/.test(password);
            const hasLowercase = /[a-z]/.test(password);
            const hasNumber = /\d/.test(password);
            const hasSpecial = /[!@#$%^&*(),.?":{}|<>]/.test(password);
            
            if (!hasUppercase || !hasLowercase || !hasNumber || !hasSpecial) {
                e.preventDefault();
                alert('Password must contain at least one uppercase letter, one lowercase letter, one number, and one special character.');
                return;
            }
            
            // Disable button to prevent double submission
            resetBtn.disabled = true;
            resetBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>Resetting Password...';
            
            // Re-enable button after 3 seconds (in case of server error)
            setTimeout(() => {
                resetBtn.disabled = false;
                resetBtn.innerHTML = '<i class="fas fa-check-circle"></i>Reset My Password';
            }, 3000);
        });

        // Auto-focus password field
        document.addEventListener('DOMContentLoaded', function() {
            passwordInput.focus();
        });
    </script>
</body>
</html>