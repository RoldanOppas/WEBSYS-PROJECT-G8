<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .message {
            margin-bottom: 1rem;
            padding: 0.875rem 1rem;
            border-radius: 6px;
            display: flex;
            align-items: center;
            font-size: 0.875rem;
            font-weight: 500;
        }
        .message i {
            margin-right: 0.5rem;
        }
        .message.success {
            background-color: #f0fdf4;
            border: 1px solid #10b981;
            color: #065f46;
        }
        .message.error {
            background-color: #fef2f2;
            border: 1px solid #ef4444;
            color: #991b1b;
        }
        .form-control {
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }
        .btn {
            transition: background-color 0.3s ease, transform 0.1s ease;
        }
        .btn:hover {
            transform: translateY(-1px);
        }
        .btn:active {
            transform: translateY(0);
        }
        .turnstile-container {
            margin: 1.5rem 0;
            display: flex;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="sidebar-logo" style="margin: 0 auto 1rem;">
                    <i class="fas fa-key"></i>
                </div>
                <h1 class="auth-title">Reset Password</h1>
                <p class="auth-subtitle">Enter your new password below</p>
            </div>
            
            <% if (locals.message) { %>
                <div class="message error">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= message %>
                </div>
            <% } %>
            
            <form class="auth-form" action="/password/reset/<%= token %>" method="POST" id="resetForm">
                <div class="form-group">
                    <label for="password" class="form-label">
                        <i class="fas fa-lock" style="margin-right: 0.5rem;"></i>
                        New Password
                    </label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter new password" required>
                </div>

                <div class="form-group">
                    <label for="confirm" class="form-label">
                        <i class="fas fa-lock" style="margin-right: 0.5rem;"></i>
                        Confirm Password
                    </label>
                    <input type="password" id="confirm" name="confirm" class="form-control" placeholder="Confirm new password" required>
                </div>

                <!-- Turnstile widget -->
                <div class="turnstile-container">
                    <div class="cf-turnstile" 
                         data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary" id="resetBtn" style="width: 100%; padding: 0.875rem;">
                    <i class="fas fa-check-circle" style="margin-right: 0.5rem;"></i>
                    Reset Password
                </button>
            </form>

            <div class="auth-links">
                <p>
                    <a href="/users/login">
                        <i class="fas fa-arrow-left" style="margin-right: 0.25rem;"></i>
                        Back to Login
                    </a>
                </p>
            </div>
        </div>
    </div>

    <!-- Turnstile script -->
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

    <script>
        // Form validation
        document.getElementById('resetForm').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirm = document.getElementById('confirm').value;
            const resetBtn = document.getElementById('resetBtn');
            
            if (!password || !confirm) {
                e.preventDefault();
                alert('Please fill in all fields.');
                return;
            }
            
            if (password !== confirm) {
                e.preventDefault();
                alert('Passwords do not match.');
                return;
            }
            
            if (password.length < 8) {
                e.preventDefault();
                alert('Password must be at least 8 characters long.');
                return;
            }
            
            // Disable button to prevent double submission
            resetBtn.disabled = true;
            resetBtn.innerHTML = '<i class="fas fa-spinner fa-spin" style="margin-right: 0.5rem;"></i>Resetting...';
            
            // Re-enable button after 3 seconds (in case of server error)
            setTimeout(() => {
                resetBtn.disabled = false;
                resetBtn.innerHTML = '<i class="fas fa-check-circle" style="margin-right: 0.5rem;"></i>Reset Password';
            }, 3000);
        });

        // Auto-focus password field
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('password').focus();
        });
    </script>
</body>
</html>