<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Sweet Haven Bakery</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            background: linear-gradient(135deg, #fffbf0 0%, #fef3c7 50%, #fde68a 100%);
            position: relative;
            overflow: hidden;
        }

        .auth-container::before {
            content: 'üßÅ';
            position: absolute;
            font-size: 18rem;
            opacity: 0.05;
            top: -4rem;
            left: -4rem;
            transform: rotate(20deg);
            pointer-events: none;
        }

        .auth-container::after {
            content: 'ü•ñ';
            position: absolute;
            font-size: 16rem;
            opacity: 0.05;
            bottom: -4rem;
            right: -4rem;
            transform: rotate(-20deg);
            pointer-events: none;
        }

        .auth-card {
            background: white;
            border-radius: 1.5rem;
            box-shadow: 0 10px 40px rgba(120, 53, 15, 0.15);
            padding: 3rem 2.5rem;
            width: 100%;
            max-width: 500px;
            border: 3px solid var(--border-light);
            position: relative;
            z-index: 1;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .auth-logo {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-color), #ea580c);
            border-radius: 1.25rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.25rem;
            box-shadow: 0 8px 20px rgba(217, 119, 6, 0.3);
        }

        .auth-logo i {
            font-size: 2.5rem;
            color: white;
        }

        .auth-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .auth-subtitle {
            color: var(--text-secondary);
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .bakery-tagline {
            font-size: 0.875rem;
            color: var(--primary-color);
            font-weight: 600;
            margin-top: 0.5rem;
        }

        .auth-form {
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-label {
            display: block;
            margin-bottom: 0.625rem;
            font-weight: 600;
            color: var(--text-primary);
            font-size: 0.925rem;
        }

        .form-label i {
            margin-right: 0.5rem;
            color: var(--primary-color);
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1.125rem;
            border: 2px solid var(--border-color);
            border-radius: 0.75rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            background-color: var(--bg-primary);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(217, 119, 6, 0.1);
            background-color: white;
        }

        .password-requirements {
            margin-top: 0.75rem;
            padding: 1rem;
            background: var(--bg-secondary);
            border-radius: 0.75rem;
            border: 2px solid var(--border-light);
        }

        .requirement {
            padding: 0.375rem 0;
            font-size: 0.875rem;
            transition: color 0.3s ease;
            display: flex;
            align-items: center;
        }

        .requirement.valid {
            color: #059669;
        }

        .requirement.invalid {
            color: #dc2626;
        }

        .requirement i {
            margin-right: 0.625rem;
            width: 16px;
            font-size: 0.875rem;
        }

        .turnstile-container {
            margin: 0.5rem 0;
            display: flex;
            justify-content: center;
        }

        .btn {
            padding: 1rem 1.5rem;
            border: none;
            border-radius: 0.75rem;
            font-weight: 600;
            font-size: 1rem;
            text-decoration: none;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.625rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), #ea580c);
            color: white;
            box-shadow: 0 6px 20px rgba(217, 119, 6, 0.3);
            width: 100%;
        }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(217, 119, 6, 0.4);
        }

        .btn-primary:active:not(:disabled) {
            transform: translateY(0);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .auth-links {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid var(--border-light);
        }

        .auth-links p {
            margin-bottom: 0;
            color: var(--text-secondary);
            font-size: 0.925rem;
        }

        .auth-links a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s ease;
        }

        .auth-links a:hover {
            color: var(--primary-hover);
            text-decoration: underline;
        }

        @media (max-width: 600px) {
            .form-row {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 480px) {
            .auth-card {
                padding: 2rem 1.5rem;
            }

            .auth-title {
                font-size: 1.75rem;
            }

            .auth-logo {
                width: 70px;
                height: 70px;
            }

            .auth-logo i {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-logo">
                    <i class="fas fa-birthday-cake"></i>
                </div>
                <h1 class="auth-title">Join Sweet Haven</h1>
                <p class="auth-subtitle">Create your account and start enjoying fresh baked goods</p>
                <p class="bakery-tagline">ü•ê Where Every Bite is Bliss üç∞</p>
            </div>
            
            <form class="auth-form" action="/users/register" method="POST" id="registrationForm">
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName" class="form-label">
                            <i class="fas fa-user"></i>
                            First Name
                        </label>
                        <input type="text" id="firstName" name="firstName" class="form-control" placeholder="John" required>
                    </div>

                    <div class="form-group">
                        <label for="lastName" class="form-label">
                            Last Name
                        </label>
                        <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Doe" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email Address
                    </label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="john.doe@example.com" required>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">
                        <i class="fas fa-lock"></i>
                        Password
                    </label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Create a strong password" required>
                    
                    <div class="password-requirements" id="passwordRequirements">
                        <div class="requirement invalid" id="length">
                            <i class="fas fa-times"></i>
                            At least 8 characters
                        </div>
                        <div class="requirement invalid" id="uppercase">
                            <i class="fas fa-times"></i>
                            One uppercase letter
                        </div>
                        <div class="requirement invalid" id="lowercase">
                            <i class="fas fa-times"></i>
                            One lowercase letter
                        </div>
                        <div class="requirement invalid" id="number">
                            <i class="fas fa-times"></i>
                            One number
                        </div>
                        <div class="requirement invalid" id="special">
                            <i class="fas fa-times"></i>
                            One special character (!@#$%^&*)
                        </div>
                    </div>
                </div>

                <!-- Turnstile widget -->
                <div class="turnstile-container">
                    <div class="cf-turnstile" 
                         data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
                    <i class="fas fa-user-plus"></i>
                    Create My Account
                </button>
            </form>

            <div class="auth-links">
                <p>
                    Already have an account? 
                    <a href="/users/login">Sign in here</a>
                </p>
            </div>
        </div>
    </div>

    <!-- Turnstile script -->
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

    <script>
        const passwordInput = document.getElementById('password');
        const submitBtn = document.getElementById('submitBtn');
        const form = document.getElementById('registrationForm');

        // Password validation criteria
        const criteria = {
            length: (password) => password.length >= 8,
            uppercase: (password) => /[A-Z]/.test(password),
            lowercase: (password) => /[a-z]/.test(password),
            number: (password) => /\d/.test(password),
            special: (password) => /[!@#$%^&*(),.?":{}|<>]/.test(password)
        };

        function updateRequirement(id, isValid) {
            const element = document.getElementById(id);
            const icon = element.querySelector('i');
            
            if (isValid) {
                element.classList.remove('invalid');
                element.classList.add('valid');
                icon.classList.remove('fa-times');
                icon.classList.add('fa-check');
            } else {
                element.classList.remove('valid');
                element.classList.add('invalid');
                icon.classList.remove('fa-check');
                icon.classList.add('fa-times');
            }
        }

        function validatePassword() {
            const password = passwordInput.value;
            let allValid = true;

            // Check each criterion
            for (const [key, validator] of Object.entries(criteria)) {
                const isValid = validator(password);
                updateRequirement(key, isValid);
                if (!isValid) allValid = false;
            }

            // Enable/disable submit button
            submitBtn.disabled = !allValid;
            
            return allValid;
        }

        // Real-time validation
        passwordInput.addEventListener('input', validatePassword);

        // Form submission
        form.addEventListener('submit', function(e) {
            if (!validatePassword()) {
                e.preventDefault();
                alert('Please ensure your password meets all requirements.');
                return;
            }
            
            // Disable button
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>Creating Account...';
            
            // Re-enable after timeout
            setTimeout(() => {
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-user-plus"></i>Create My Account';
            }, 3000);
        });

        // Auto-focus first name field
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('firstName').focus();
        });
    </script>
</body>
</html>