            padding: 8rem 0 6rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: 'ü•ê';
            position: absolute;
            font-size: 25rem;
            opacity: 0.08;
            top: -8rem;
            right: -6rem;
            transform: rotate(-25deg);
            pointer-events: none;
        }

        .hero::after {
            content: 'üçû';
            position: absolute;
            font-size: 20rem;
            opacity: 0.08;
            bottom: -6rem;
            left: -5rem;
            transform: rotate(15deg);
            pointer-events: none;
        }

        .hero-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            z-index: 2;
        }

        .hero-badge {
            display: inline-block;
            background: rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
            padding: 0.625rem 1.75rem;
            border-radius: 50px;
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 2rem;
            border: 2px solid rgba(255, 255, 255, 0.4);
        }

        .hero-title {
            font-size: 4.5rem;
            font-weight: 900;
            margin-bottom: 1.5rem;
            line-height: 1.1;
            font-family: 'Playfair Display', serif;
            text-shadow: 0 4px 12px rgba(0, 0, 0, 0.15);
        }

        .hero-subtitle {
            font-size: 1.4rem;
            margin-bottom: 3rem;
            opacity: 0.98;
            max-width: 750px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.7;
            font-weight: 400;
        }

        .hero-buttons {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-hero {
            padding: 1.35rem 2.75rem;
            font-size: 1.15rem;
            font-weight: 700;
            border-radius: 50px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
