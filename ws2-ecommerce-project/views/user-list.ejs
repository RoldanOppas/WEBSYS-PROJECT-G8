<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles/main.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    table { border-collapse: collapse; width: 100%; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    th { background-color: #f2f2f2; }
    .delete-form { display: inline; margin: 0; }
    .delete-btn { background-color: #dc3545; color: white; border: none; padding: 5px 10px; cursor: pointer; }
    .delete-btn:hover { background-color: #c82333; }
    .edit-link { text-decoration: none; color: #007bff; }
    .edit-link:hover { text-decoration: underline; }
  </style>
</head>
<body>
  <h1><%= title %></h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Status</th>
        <th>Email Verified</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td><%= (user.firstName || '') + ' ' + (user.lastName || '') %></td>
        <td><%= user.email %></td>
        <td style="text-transform: capitalize;"><%= user.role %></td>
        <td style="text-transform: capitalize;"><%= user.accountStatus || 'active' %></td>
        <td><%= user.isEmailVerified ? 'Yes' : 'No' %></td>
        <td>
          <%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : 'N/A' %>
        </td>
        <td>
          <a href="/users/edit/<%= user._id %>" class="edit-link">Edit</a> |
          <form action="/users/delete/<%= user._id %>" method="POST" class="delete-form" 
                onsubmit="return confirm('Are you sure you want to delete this user?')">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <div style="margin-top: 20px;">
    <a href="/users/register">Register New User</a> |
    <a href="/users/admin">Admin Dashboard</a> |
    <a href="/users/dashboard">Back to Dashboard</a>
  </div>
</body>
</html>